<p class="lead">Welcome to your homepage</p>
<h1>All the info</h1>

<h2>People</h2>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
    <tr>
      <td><%= person.first_name %></td>
      <td><%= person.last_name %></td>
      <td><%= person.date_of_birth %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>Organizations</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of employees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
    <tr>
      <td><%= organization.name %></td>
      <td><%= organization.number_of_employees %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>Aliens</h2>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aliens.each do |alien| %>
    <tr>
      <td><%= alien.first_name %></td>
      <td><%= alien.last_name %></td>
      <td><%= alien.date_of_birth %></td>
    <% end %>
  </tbody>
</table>
